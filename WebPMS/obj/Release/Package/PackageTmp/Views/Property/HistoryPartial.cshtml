@model WebPMS.Models.HistoryList


<div class="PopupPageTitle">
    History
</div>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <table class="history">
            <tr>
                <th>Date & Time</th>
                <th>Details</th>
                <th>UserID</th>
            </tr>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                if (i % 2 == 0)
                {
                    <tr>
                        <td>@item.TimeStamp</td>
                        <td>@item.Narrative</td>
                        <td>@item.UserID</td>
                    </tr>
                }
                else
                {
                    <tr class="alt">
                        <td>@item.TimeStamp</td>
                        <td>@item.Narrative</td>
                        <td>@item.UserID</td>
                    </tr>
                }

                i++;
            }
        </table>
    </div>
</div>

